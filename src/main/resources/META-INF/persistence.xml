<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="molw">
        <jta-data-source>java:jboss/datasources/BirdsDS</jta-data-source>
        <properties>
            <property name="hibernate.integration.spatial.enabled" value="true"/>
            <property name="hibernate.connection.charSet" value="UTF-8"/>
            <property name="hibernate.dialect" value="org.hibernate.spatial.dialect.postgis.PostgisPG95Dialect"/>
        </properties>
    </persistence-unit>
</persistence>
